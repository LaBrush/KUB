{% extends "::base.html.twig" %}

{% block title %}
	{{ parent() }} - Liste des groupes
{% endblock %}

{% block body %}
	
	<article class="article">
		<h2 class="section-title">Groupes</h2>
	</article>

	<article class="article">
		{% if is_granted('ROLE_SECRETAIRE') %}
			<div class="create">
				<a class="button-yes" href="{{ path('groupe_create') }}">Créer un groupe ou une classe</a>
			</div>
		{% endif %}

		<label for="search-in-list">Chercher dans la liste :</label>
		<input id="search-in-list" type="text">
		
		<ul class="liste">
			{% for groupe in list_groupes %}
			
				<a href="{{ path('groupe_show', { id: groupe.id }) }}">
					<li class="in-list li-list">
						<span>{{ groupe }}</span>
					</li>
				</a>

			{% else %}
				<li>Aucun groupe enregistré pour le moment</li>
			{% endfor %}
		</ul>
	</article>
		
{% endblock %}

{% block js %}
	<script type="text/javascript" src="{{ asset('ressources/jsmin/search.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('ressources/jsmin/fuse.min.js') }}"></script>
{% endblock %}