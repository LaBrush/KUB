{% extends "::base.html.twig" %}

{% block title %}
	{{ parent() }} - Créer un groupe
{% endblock %}

{% block body %}
	
	<article class="article">
		<h2 class="section-title">Créer un groupe</h2>
	</article>

	<article class="article">
		{{ form_start(form, { 'attr': {'class': 'formulaire-creation'} }) }}

			{% include "KubClasseBundle:Groupe:form.html.twig" %}

			<span class="validate">
				<input class="button-yes" type="submit">
				<a class="button" href="{{ path('groupe_list') }}">Annuler</a>
			</span>
		{{ form_end(form) }}
	</article>

{% endblock %}

{% block js %}
		
	<script type="text/javascript" src="{{ asset('ressources/select2/select2.min.js') }}"></script>
	<link rel="stylesheet" href="{{ asset('ressources/select2/select2.css') }}" />
	{{ form_javascript(form) }}
	{{ form_stylesheet(form) }}

{% endblock %}