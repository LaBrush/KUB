<?php

namespace Kub\NotificationBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * DetailedNotification
 * @ORM\Entity
 * @ORM\DiscriminatorColumn(name="discr_detailed", type="string")
 * @ORM\DiscriminatorMap({"nan" = "NoteAddedNotification", "acn" = "ArianeCommentaireNotification"})
 */
abstract class DetailedNotification extends Notification
{
	private $contenu ;

	public function getContenu()
    {
        return $this->contenu;
    }

    public function __toString()
    {
        return (string)$this->format();
    }

    public function setContenu($contenu)
    {
        $this->contenu = $contenu ;
    }

    public function format()
    {
        return (string)$this->getContenu();
    }
}