{% extends "::base.html.twig" %}

{% block body %}

	<article class="article">
		<h2 class="section-title">Fréquences</h2>
	</article>

	<article class="article">
		<div class="create">
			<a class="button-yes" class="button-yes" href="{{ path('frequence_create') }}">Créer une frequence de semaine</a>
		</div>

		<label for="search-in-list">Chercher dans la liste :</label>
		<input id="search-in-list" type="text">
		
		<ul class="liste">
			{% for frequence in list_frequence %}
			
				<a href="{{ path('frequence_edit', { id: frequence.id }) }}">
					<li class="in-list li-list">
						<span>{{ frequence }}</span>
					</li>
				</a>

			{% endfor %}

			{% if list_frequence|length == 0 %}
				<li>Aucun frequence enregistré pour le moment</li>
			{% endif %}
		</ul>
	</article>		

{% endblock %}

{% block js %}
	<script type="text/javascript" src="{{ asset('ressources/jsmin/fuse.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('ressources/jsmin/search.min.js') }}"></script>
{% endblock %}