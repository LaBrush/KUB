{% extends "::base.html.twig" %}

{% block title %}
	{{ parent() }} - Liste des cours
{% endblock %}

{% block body %}

	<article class="article">
		<h2 class="section-title">Cours</h2>
	</article>

	<article class="article">
		<div class="create">
			<a class="button-yes" class="button-yes" href="{{ path('cours_create') }}">Créer un cours</a>
		</div>

		<label for="search-in-list">Chercher dans la liste :</label>
		<input id="search-in-list" type="text">
		
		<ul class="liste">
			{% for cours in list_cours %}
			
				<a href="{{ path('cours_edit', { id: cours.id }) }}">
					<li class="in-list li-list">
						<span>{{ cours }}</span>
					</li>
				</a>
			{% else %}
				<li>Aucun cours enregistré pour le moment</li>
			{% endfor %}
		</ul>
	</article>		

{% endblock %}

{% block js %}
	<script type="text/javascript" src="{{ asset('ressources/jsmin/fuse.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('ressources/jsmin/search.min.js') }}"></script>
{% endblock %}