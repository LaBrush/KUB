{% block form %}

	<span class="name">
		{{ form_errors(form.name) }}
		{{ form_label(form.name) }} <div class="input">{{ form_widget(form.name) }}</div>
	</span>

	<span class="echeance">
		{{ form_errors(form.echeance) }}
		{{ form_label(form.echeance) }} <div class="input">{{ form_widget(form.echeance) }}</div>
	</span>

	<span class="participants">
		{{ form_errors(form.participants) }}
		{{ form_label(form.participants) }} <div class="input">{{ form_widget(form.participants) }}</div>
	</span>

	<hr>

	<span class="listeTaches">
		{% if form.listeTaches is defined %}
			
				{{ form_errors(form.listeTaches) }}
				{{ form_label(form.listeTaches) }} <div class="input">{{ form_widget(form.listeTaches) }}</div>
			
		{% else %}
				Aucune liste de tache pour l'instant
		{% endif %}
	</span>

	<span class="newListe">
		{{ form_errors(form.newListe) }}
		{{ form_label(form.newListe) }} <div class="input">{{ form_widget(form.newListe, {'attr': {'class': 'input-newliste'}}) }}</div>
	</span>

	<span>
		<a class="button button-liste">Cr√©er une liste</a>
	</span>

	<hr>

	<span class="ressources">
		{{ form_errors(form.ressources) }}
		{{ form_label(form.ressources) }} <div class="input">{{ form_widget(form.ressources) }}</div>
	</span>

	<span class="fichiers">
		{{ form_errors(form.fichiers) }}
		{{ form_label(form.fichiers) }} <div class="input">{{ form_widget(form.fichiers) }}</div>
	</span>

{% endblock %}