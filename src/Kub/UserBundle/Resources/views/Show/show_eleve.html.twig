{% extends "KubUserBundle:Show:show.html.twig" %}

{% block details %}

	{% if user.photo is not null %}
        <img src="{{ asset(user.photo.webPath) }}" alt="{{ user.prenom }}" />
      {% endif %}

	<span class="label">Date de naissance :</span>
	<span class="info">{{ user.anniversaire | date('d/m/Y') }}</span>

	<span class="label">Niveau de l'élève :</span>
	<span class="info">{{ user.niveau | capitalize }}</span>

	{% if user.tuteurs|length > 0 %}
		<span class="label">Tuteurs de {{ user }}</span> 

			<ul class="liste">
				
				{% for tuteur in user.tuteurs %}
					<li><a href="{{ path('tuteur_show', {id: tuteur.id}) }}">{{ tuteur.prenom }} {{ tuteur.nom }}</a></li>
				{% endfor %}

			</ul>
			
		</span>
	{% endif %}

	{% if user.groupes|length > 0 %}
		<span class="label">Groupes auquels {{ user }} appartient :</span>

			<ul class="liste">
				
				{% for groupe in user.groupes %}
					<li class="li-list"><a href="{{ path('groupe_show', {id: groupe.id}) }}">{{ groupe.name }}</a></li>
				{% endfor %}

			</ul>
			
		</span>
	{% endif %}

{% endblock %}