{% extends "::base.html.twig" %}

{% block body %}

		<article class="article">
			<h2 class="section-title">{{ role | capitalize }}</h2>
		</article>
	
		<article class="article">
			<h3 class="h2">Liste des {{ role }}s</h3>


			<label for="search-in-list">Chercher dans la liste :</label>
			<input id="search-in-list" type="search">
			<a class="button-yes" href="{{ path('user_create', { role: role }) }}">Créer un {{ role }}</a>
			<ul>
				{% for user in list_users %}
				
					<li><a class="in-list" href="{{ path('user_show', { role: role, username: user.username }) }}">{{ user.nom }} {{ user.prenom }}</a></li>
					<li><a class="in-list" href="{{ path('user_show', { role: role, username: user.username }) }}">{{ user.nom }} {{ user.prenom }}</a></li>

				{% endfor %}

			</ul>

			{% if list_users|length == 0 %}
				<p>Aucun {{ role }} enregistré pour le moment</p>
			{% endif %}


		</article>
		

{% endblock %}

{% block js %}
	<script type="text/javascript" src="{{ asset('ressources/jsmin/search.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('ressources/jsmin/fuse.min.js') }}"></script>
{% endblock %}