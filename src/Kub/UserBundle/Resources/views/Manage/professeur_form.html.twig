{% block form %}

	<span class="prenom">
		{{ form_errors(form.prenom) }}
		{{ form_label(form.prenom) }} <div class="input">{{ form_widget(form.prenom) }}</div>
	</span>

	<span class="nom">
		{{ form_errors(form.nom) }}
		{{ form_label(form.nom) }} <div class="input">{{ form_widget(form.nom) }}</div>
	</span>

	<span class="email">
		{{ form_errors(form.email) }}
		{{ form_label(form.email) }} <div class="input">{{ form_widget(form.email) }}</div>
	</span>

	<span class="locked">
		{{ form_errors(form.locked) }}
		{{ form_label(form.locked) }}
		<span>{{ form_widget(form.locked.0) }} {{ form_label(form.locked.0) }}</span>
		<span>{{ form_widget(form.locked.1) }} {{ form_label(form.locked.1) }}</span>  
	</span>

{% endblock %}
