{% block form %}
	<span class="search-appel">
		<label for="search-in-list">Chercher dans la liste :</label>
		<input id="search-in-list" type="text">
	</span>

	<input class="button-yes validate-appel" type="submit">

	<ul class="liste liste-eleves">
		{% for statut in form.absences %}

			{% set eleve = eleves[ loop.index0 ] %}

			{{ form_errors(statut) }}
			<li class="li-list in-list person">
				<img src="{{ asset(eleve.photo.webPath) }}" alt="{{ eleve }}" class="profil-picture"/>
				
				<span class="name-eleve">{{ eleve.prenom }}</span>
				<span class="name-eleve">{{ eleve.nom }}</span>

				{% for element in statut %}
				    <span class="input">{{ form_widget(element, {"attr": {"class": "input-appel"}}) }}</span>
				{% endfor %}
			</li>

		{% endfor %}
	</ul>
{% endblock %}