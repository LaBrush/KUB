<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="utf-8" />
	<!--[if lt IE 9]>
				<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
			<![endif]-->
	<link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="{{ asset('ressources/stylesheets/main.css') }}" />

	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
	<!--[if IE 7]>
	  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome-ie7.min.css">
	<![endif]-->
</head>

<body class="body">
	
	<header class="header">
		<div id="logo">
			<h1 class="h2">Kub</h1>
			<span class="slogan">Le nouvel ENT</span>
		</div>
	
		{% if is_granted("ROLE_USER") %}
			<div class="user">
				<h2 class="profil-name h3">{{ app.user.prenom }} {{ app.user.nom }}</h2>
			</div>
		{% else %}
			<button class="button-login" onClick="self.location.href='{{ path('fos_user_security_login') }}'">Connexion</button>

			<div class="login-options-closed">
				<span>
					<label for="name">Adresse mail :</label><br/>
					<input type="mail" id="name">
				</span>
				<span>
					<label for="password">Mot de passe :</label><br/>
					<input type="password" id="password">
				</span>
				<button class="button-validate">Valider</button>
			</div>
		{% endif %}
	</header>

	{% if is_granted("ROLE_USER") %}
		<span id="button-menu">
			Menu <i id="chevron" class="icon-chevron-sign-down"></i>
		</span>
		<nav class="nav">
			<div class="menu">
				{{ knp_menu_render('main') }}
			</div>
		</nav>
	{% endif %}


	{% for flashMessage in app.session.flashbag.get('info') %}
		<section class="section">
		    <div class="flash-message">
		    	<p>{{ flashMessage }}</p>
		    </div>
		</section>
	{% endfor %}


	{% block body %}{% endblock %}

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
	<script type="text/javascript" src="{{ asset('ressources/jsmin/nav.min.js') }}"></script>
	{% block javascripts %}{% endblock %}
	
</body>
</html>